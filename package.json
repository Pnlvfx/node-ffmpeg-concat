{
  "name": "node-ffmpeg-concat",
  "description": "Concats a list of videos together using ffmpeg with sexy OpenGL transitions.",
  "version": "2023.9.6",
  "author": {
    "email": "simonegauli@gmail.com",
    "name": "Simone Gauli"
  },
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/esm/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    },
    "./*": {
      "import": "./*",
      "require": "./*"
    }
  },
  "type": "module",
  "license": "MIT",
  "engines": {
    "node": ">=10.13.0 < 21"
  },
  "keywords": [
    "ffmpeg",
    "fluent-ffmpeg",
    "opengl",
    "gl",
    "gl-transition",
    "transition",
    "concat",
    "concatenate",
    "video"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Pnlvfx/node-ffmpeg-concat.git"
  },
  "scripts": {
    "generate:package.json": "tsx ./tools/generate-commonjs-package-json.ts dist/cjs/package.json",
    "dev": "tsc -w --outDir dist/esm & node --watch ./dist/esm/index.js",
    "start": "node .",
    "lint": "eslint ./src",
    "build": "rimraf dist && npm run lint && npm run build:esm && npm run build:cjs && npm run generate:package.json",
    "build:esm": "tsc",
    "build:cjs": "tsc --module commonjs --moduleResolution node --outDir dist/cjs",
    "prepare": "npm run build",
    "prepublishOnly": "npm run test && npm run lint",
    "pretest": "npm run lint && tsc --noEmit",
    "test": "rimraf coverage && NODE_OPTIONS=--experimental-vm-modules jest --verbose --coverage"
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "dependencies": {
    "async-ffmpeg": "^2024.1.15",
    "ffmpeg-on-progress": "^1.0.0",
    "fluent-ffmpeg": "^2.1.2",
    "fs-extra": "^11.2.0",
    "get-pixels": "^3.3.3",
    "gl": "^6.0.2",
    "gl-buffer": "^2.1.2",
    "gl-texture2d": "^2.1.0",
    "gl-transition": "^1.13.0",
    "gl-transitions": "^1.43.0",
    "ndarray": "^1.0.19",
    "p-map": "^7.0.1",
    "rmfr": "^2.0.0",
    "tempy": "^3.1.0",
    "url-parse": "^1.5.10"
  },
  "devDependencies": {
    "@types/fluent-ffmpeg": "^2.1.24",
    "@types/fs-extra": "^11.0.4",
    "@types/get-pixels": "^3.3.4",
    "@types/gl": "^6.0.5",
    "@types/gl-texture2d": "^2.1.6",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.20",
    "@types/url-parse": "^1.4.11",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-sonarjs": "^0.24.0",
    "eslint-plugin-unicorn": "^51.0.1",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.2",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3"
  },
  "peerDependencies": {
    "sharp": "*"
  }
}
